<?xml version="1.0" encoding="utf-8"?>
<!--
this is the main fastflags settings page. it's huge, lol.
i've rebuilt the whole thing to use our standard, themed rows.
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- page description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/control_how_specific_roblox_engine_parameters_and_features_are_configured"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/textColorSecondary" />

        <!-- === GENERAL SETTINGS === -->

        <!-- Help Button Row -->
        <RelativeLayout
            android:id="@+id/button_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="12dp">
            <!-- icon, text, and arrow all in one row -->
            <ImageView
                android:id="@+id/icon_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_help_outline"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/icon_help"
                android:layout_toStartOf="@+id/arrow_help">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help"
                    android:textAppearance="?attr/textAppearanceSubtitle1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/learn_more_about_fast_flags_what_these_presets_do_and_how_to_use_them"
                    android:textAppearance="?attr/textAppearanceBody2" />
            </LinearLayout>
            <ImageView
                android:id="@+id/arrow_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward" />
        </RelativeLayout>

        <!-- Manage FastFlags Switch Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">
            <!-- text on the left, switch on the right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/switch_manage_flags">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_bloxstrap_to_manage_fast_flags"
                    android:textAppearance="?attr/textAppearanceSubtitle1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disabling_this_will_prevent_anything_configured_here_from_being_applied_to_roblox"
                    android:textAppearance="?attr/textAppearanceBody2"/>
            </LinearLayout>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_manage_flags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>
        
        <!-- you'll need to update this string in strings.xml to say Bloxstrap -->

        <!-- Reset Switch Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/switch_reset_flags">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_everything_to_default"
                    android:textAppearance="?attr/textAppearanceSubtitle1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_it_s_enabled_it_required_refresh_the_page"
                    android:textAppearance="?attr/textAppearanceBody2"/>
            </LinearLayout>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_reset_flags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <!-- === CATEGORY HEADER === -->
        <TextView
            style="@style/SettingsHeader"
            android:text="@string/rendering_and_graphics" />
        
        <!-- i made a custom style for these headers to keep 'em consistent -->

        <!-- ... and then just repeat this pattern for all the other settings ... -->
        <!-- this file is huge so i'm not gonna paste every single one, -->
        <!-- but you get the idea. just copy/paste these templates. -->

        <!-- TEMPLATE FOR A SPINNER ROW -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/spinner_anti_aliasing">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anti_aliasing_quality_msaa"
                    android:textAppearance="?attr/textAppearanceSubtitle1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/smooth_out_jagged_edges_higher_values_increases_smoothness"
                    android:textAppearance="?attr/textAppearanceBody2"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/spinner_anti_aliasing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:minWidth="120dp"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <!-- TEMPLATE FOR AN EDITTEXT ROW -->
        <com.google.android.material.textfield.TextInputLayout
            style="?attr/textInputOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/framerate_limit">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_framerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@string/_0"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- using a textinputlayout is the 'right' way to do text fields now -->

    </LinearLayout>
</ScrollView>
