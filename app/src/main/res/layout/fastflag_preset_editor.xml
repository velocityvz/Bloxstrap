<?xml version="1.0" encoding="utf-8"?>
<!--
this is the layout for one single row in the fastflags list.
i'm using a linearlayout with weights so the columns resize nicely.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp"
        android:background="?attr/selectableItemBackground">

        <!-- the flag name on the left -->
        <TextView
            android:id="@+id/textview_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/textColorPrimary"
            tools:text="FFlagHandleAltEnterFullscreenManually" />

        <!-- the flag value on the right -->
        <TextView
            android:id="@+id/textview_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/textColorSecondary"
            tools:text="False" />
    </LinearLayout>

    <!-- just a simple line to separate the list items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal" />

</LinearLayout>
