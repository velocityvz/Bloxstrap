<?xml version="1.0" encoding="utf-8"?>
<!--
this is the dialog for adding a new flag from json.
i rebuilt it from scratch so it actually looks good.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- the title of the dialog -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Fast Flag By JSON"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <!--
    this is the modern way to do a text field.
    the textinputlayout gives it the nice border and floating hint.
    -->
    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputOutlinedStyle"
        android:id="@+id/json_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="{ &quot;FFlagName&quot;: &quot;Value&quot; }">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top|start"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- the "import from file" button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_import_file"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Import from file" />

    <!-- this just holds the ok/cancel buttons at the end -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <!-- cancel button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Cancel" />

        <!-- ok button, this one is filled with our purple accent color -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            app:backgroundTint="?attr/colorAccent" />
    </LinearLayout>

</LinearLayout>
