<?xml version="1.0" encoding="utf-8"?>
<!--
this is just a simple clickable row, like for a list.
i'm using a relative layout, it's perfect for sticking text on the left
and an icon on the right.
-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp">

    <!-- this just holds the two text fields together -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/arrow_icon"
        android:layout_marginEnd="16dp">

        <!-- the main title text -->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?attr/textColorPrimary"
            tools:text="Some Setting" />

        <!-- the smaller description text underneath -->
        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/textColorSecondary"
            tools:text="Click here to change it" />
    </LinearLayout>

    <!-- the little arrow icon on the far right -->
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_forward"
        android:alpha="0.7"/>

</RelativeLayout>
