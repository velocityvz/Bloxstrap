<!-- this is a reusable row for a setting with a toggle switch -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- holds the title and description -->
    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/setting_switch">

        <!-- the title of the setting -->
        <TextView
            android:id="@+id/textview_name_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting Title"
            android:textSize="16sp"
            android:textColor="?attr/textColorPrimary" />

        <!-- the description of the setting -->
        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A short description"
            android:textSize="14sp"
            android:textColor="?attr/textColorSecondary" />

    </LinearLayout>

    <!--
    replaced the old imageview with a proper material switch,
    it uses our purple accent color automatically!
    -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/setting_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"/>

</RelativeLayout>
