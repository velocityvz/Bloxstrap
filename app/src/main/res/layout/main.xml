<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="@drawable/background_normal"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">

		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="200dp"
					android:layout_height="47dp"
					android:layout_marginRight="30dp"
					android:background="@drawable/logo_and_icon"
					android:src="@drawable/nothing80"
					android:scaleType="center" />

				<TextView
					android:id="@+id/textview_version"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:text=""
					android:textSize="12sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="20dp"
				android:padding="8dp"
				android:orientation="vertical">

				<!-- Launch Button -->
				<LinearLayout
					android:id="@+id/button_launchrbx"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="2dp"
					android:background="#000000"
					android:gravity="end|center_vertical"
					android:layout_margin="3dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/textview_launch"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="10dp"
						android:padding="2dp"
						android:text="@string/launch_roblox"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />

					<LinearLayout
						android:id="@+id/layout_launch_arrow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="end|center_vertical"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/imageview_launch"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/nothing80"
							android:background="@drawable/arrow_right"
							android:scaleType="center" />
					</LinearLayout>
				</LinearLayout>

				<!-- Configure Settings Button -->
				<LinearLayout
					android:id="@+id/button_configuresettings"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="2dp"
					android:background="#000000"
					android:gravity="end|center_vertical"
					android:layout_margin="3dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/textview_configure"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="10dp"
						android:padding="2dp"
						android:text="@string/configure_settings"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />

					<LinearLayout
						android:id="@+id/layout_configure_arrow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="end|center_vertical"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/imageview_configure"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/nothing80"
							android:background="@drawable/arrow_right"
							android:scaleType="center" />
					</LinearLayout>
				</LinearLayout>

				<!-- About Button -->
				<LinearLayout
					android:id="@+id/button_about"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="2dp"
					android:background="#000000"
					android:gravity="end|center_vertical"
					android:layout_margin="3dp"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/textview_about"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="10dp"
						android:padding="2dp"
						android:text="@string/about"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />

					<LinearLayout
						android:id="@+id/layout_about_arrow"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="end|center_vertical"
						android:orientation="horizontal">

						<ImageView
							android:id="@+id/imageview_about"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/nothing80"
							android:background="@drawable/arrow_right"
							android:scaleType="center" />
					</LinearLayout>
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
