<?xml version="1.0" encoding="utf-8"?>
<!--
this is the fastflags editor screen.
i've cleaned it up a ton so it's not a huge mess of linearlayouts anymore.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- the description text at the top -->
    <TextView
        android:id="@+id/textview_page_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your own Fast Flags"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/textColorSecondary" />

    <!--
    chucked the old fake buttons for these real ones.
    they're inside a scrollview in case the screen is small.
    -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none">
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add_new"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new"
                app:icon="@drawable/ic_add" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete_selected"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_selected"
                app:icon="@drawable/ic_delete" />
            
            <!-- you could even add a red tint to this button in your code to show it's dangerous -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_copy_json"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy_json"
                app:icon="@drawable/ic_copy" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_show_presets"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_preset_flags"
                app:icon="@drawable/ic_visibility" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
    </HorizontalScrollView>

    <!-- this is the modern way to do a search bar -->
    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconDrawable="@drawable/ic_search_white"
        android:hint="@string/search">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- the header for the list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/name"
            android:textAppearance="?attr/textAppearanceSubtitle2" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/value"
            android:textAppearance="?attr/textAppearanceSubtitle2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"/>

    <!--
    this should probably be a recyclerview if you have a lot of flags,
    but listview works too.
    -->
    <ListView
        android:id="@+id/listview_flag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        tools:listitem="@layout/fastflag_preset_editor" />

</LinearLayout>
