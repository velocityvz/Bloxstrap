<?xml version="1.0" encoding="utf-8"?>
<!--
this is a standard settings screen layout.
just a scrollable list of options.
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- the little description text at the top of the page -->
        <TextView
            android:id="@+id/textview_page_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/configure_what_bloxstrap_should_do_when_launching_roblox"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/textColorSecondary" />

        <!--
        this is a setting row for picking an option from a dropdown.
        using a relative layout makes it easy to stick stuff on the left and right.
        -->
        <RelativeLayout
            android:id="@+id/setting_preferred_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/spinner_preferred_app">

                <!-- title text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/preferred_roblox_app"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/textColorPrimary" />

                <!-- description text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chosen_one_will_force_save_fast_flags_to_the_preferred_roblox_app_and_force_launch_preferred_roblox_app_but_only_if_needed"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/textColorSecondary" />

            </LinearLayout>

            <!-- a real spinner now, no more ugly background color -->
            <Spinner
                android:id="@+id/spinner_preferred_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:minWidth="120dp"/>
        </RelativeLayout>

        <!-- divider line to keep things clean -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"
            android:layout_marginVertical="8dp"/>

        <!--
        and here's a setting row with a toggle switch.
        ditched that old imageview for a real material switch. it's way better.
        -->
        <RelativeLayout
            android:id="@+id/setting_legacy_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/switch_legacy_path">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_legacy_finder_path"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replace_the_current_finder_path_with_the_legacy_finder_path"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/textColorSecondary" />

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_legacy_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
